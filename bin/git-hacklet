#!/bin/bash

if [ ! -n "$1" ]; then
    echo "Pass the hacklet command."
    exit 1
fi

case "$1" in
    install*)
        git-hacklet-install "$2" "$3"
    ;;
    work*)
        git-hacklet-work "$2"
    ;;
    run*)
        git-hacklet-run "$2" "$3"
    ;;
    *)
        echo "Pass the hacklet command."
        exit 1
    ;;
esac
